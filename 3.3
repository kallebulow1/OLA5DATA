library(ggplot2)

ggplot(data, aes(x = laane_mulighed, y = Antal.ansatte.Cvr.nr.)) +
  geom_boxplot(fill = "steelblue", alpha = 0.7) +
  labs(
    title = "Antal ansatte fordelt på vurderingen af lånemuligheder",
    x = "Vurdering af lånemuligheder",
    y = "Antal ansatte"
  ) +
  theme_minimal(base_size = 14)

ggplot(data, aes(x = laane_mulighed, y = Antal.ansatte.Cvr.nr.)) +
